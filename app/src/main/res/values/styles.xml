<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/colorLightBlue</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorLightBlue</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="lollipop">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorDarkGrey</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGrey</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="ActionBar2Theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="lollipop">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="ChatRoomTheme" parent="AppTheme">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:textColorSecondary">@color/colorLightBlue</item>
    </style>

</resources>
